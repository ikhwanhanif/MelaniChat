<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ln"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageProfile"
        android:background="@drawable/background_imageview"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/viewSupporter"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:id="@+id/textName"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:text="@string/nama"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/black"
        android:layout_above="@id/textRecentMessage"
        android:layout_toEndOf="@id/imageProfile"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/textRecentMessage"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:text="Recent Message"
        android:maxLines="1"
        android:textColor="@color/very_dark_grey"
        android:textSize="18sp"
        android:layout_toEndOf="@id/imageProfile"
        android:layout_alignBottom="@id/imageProfile"
        android:layout_marginBottom="5dp"
        />

</RelativeLayout>